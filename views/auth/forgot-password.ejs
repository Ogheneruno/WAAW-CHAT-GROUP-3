<%- include('../partials/head') -%>
<%- include('../partials/header') -%>
<%-include('../partials/regs')-%>

 
<div class="container">
    <div class="row justify-content-center align-items-center def py-5 w-50 offset-lg-2">
        <div class="col-lg-6">
            <h3 class="text-center my-4">Forgot Password</h3>
            <span>
                <center><%- include('../../views/messages') -%></center>
            </span>
            <form action="/auth/forgot-password" method="POST">
                <div class="inputBox">
                    <i class="fas fa-user"></i>
                    <input type="text" name="item" id="username"  placeholder="Type Your username" required>
                </div>
    
                <div class="inputBox">
                    <i class="fas fa-unlock-alt"></i>
                    <input type="password" name="password" id="email" placeholder="Type New Password" required>
                </div>
    
                <div class="inputBox">
                    <i class="fas fa-unlock-alt"></i>
                    <input type="password" name="confirmpassword" id="password" placeholder="Confirm New Password" required>
                </div>
    
    
                <button class="button" type="submit">CHANGE PASSWORD</button>
            </form>
        </div>

     
        
    </div>
</div>
    


<%- include('../partials/foot') -%>