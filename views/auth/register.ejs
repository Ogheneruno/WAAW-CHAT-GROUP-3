<%-include('../partials/head')-%>
<%-include('../partials/regs')-%>

<div class="container">
    <div class="row justify-content-center align-items-center def py-5 w-75 offset-lg-2">
        <div class="col-lg-6">
            <h3>Welcome to <span style="color: rgb(8, 143, 177);">WAAW CHAT</span> </h3>
            <h4 class="text-center my-3">Create Your Account</h4>
            <span>
                <center><%- include('../../views/messages') -%></center>
            </span>
            <form action="/auth/register" method="POST">
                <div class="inputBox">
                    <i class="fas fa-user"></i>
                    <input type="text" name="username" id="username"  placeholder="Username" required>
                </div>
    
                <div class="inputBox">
                    <i class="fas fa-envelope"></i>
                    <input type="email" name="email" id="email" placeholder="email" required>
                </div>
    
                <div class="inputBox">
                    <i class="fas fa-unlock-alt"></i>
                    <input type="password" name="password" id="password" placeholder="Password" required>
                </div>
    
                <div class="inputBox">
                    <i class="fas fa-unlock-alt"></i>
                    <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" required>
                </div>
    
                <p> Already Have an Account?<a href="/auth/login">Login</a></p>
    
                    <button class="button" type="submit">CONTINUE</button>
            </form>
        </div>

        <div class="col-lg-4">
            <img src="/images/signup-image.jpg" class="img-fluid">
        </div>
        
    </div>
</div>












<%-include('../partials/foot')-%>
